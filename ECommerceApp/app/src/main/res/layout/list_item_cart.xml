<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_full_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CAE0F1">

        <androidx.cardview.widget.CardView
            android:id="@+id/cart_card_view_project_icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/cart_image_view_project_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/cart_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cart_card_view_project_icon_container"
            android:layout_toEndOf="@+id/cart_card_view_project_icon_container"
            android:fontFamily="sans-serif-medium"
            android:text="Diet Coke"
            android:textColor="#222222"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/layout_price"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_name_text_view"
            android:layout_toEndOf="@id/cart_card_view_project_icon_container"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/cart_text_view_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="$7.99"
                android:textColor="#888888"
                android:textSize="40sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cart_card_view_project_icon_container2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">


                <androidx.appcompat.widget.AppCompatButton
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="#EF9A9A"
                    android:backgroundTint="#EF9A9A"
                    android:text="Remove"
                    android:textSize="20sp"
                    app:iconTint="#E53935" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>