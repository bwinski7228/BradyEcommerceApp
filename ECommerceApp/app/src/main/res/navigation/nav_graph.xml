<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/firstFragment">
    <fragment
        android:id="@+id/secondFragment2"
        android:name="com.example.ecommerceapp.SecondFragment"
        android:label="SecondFragment" />
    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.example.ecommerceapp.ThirdFragment"
        android:label="ThirdFragment" />
    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.ecommerceapp.FirstFragment"
        android:label="fragment_first"
        tools:layout="@layout/fragment_first" >
        <action
            android:id="@+id/action_firstFragment_to_secondFragment2"
            app:destination="@id/secondFragment2" />
        <action
            android:id="@+id/action_firstFragment_to_thirdFragment"
            app:destination="@id/thirdFragment" />
    </fragment>
    <fragment
        android:id="@+id/promoPage"
        android:name="com.example.ecommerceapp.PromoPage"
        android:label="promo_page"
        tools:layout="@layout/promo_page" />
</navigation>